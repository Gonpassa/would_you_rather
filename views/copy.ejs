<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://kit.fontawesome.com/8dcd3a832c.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="/style.css">
  <script src="/wyr-single.js"defer></script>
  <link rel="stylesheet" href="/wyr-single.css">
</head>

<body class="h-auto w-screen flex flex-col bg-slate-600 border-white">
  <!-- nav bar for later vvv -->
  <nav class="bg-gray-800">
    <div class="mx-auto max-w-7xl px-2 sm:px-6 lg:px-8">
      <div class="relative flex h-16 items-center justify-between">
        <div class="absolute inset-y-0 left-0 flex items-center sm:hidden">
          <!-- Mobile menu button-->
          <button type="button"
            class="inline-flex items-center justify-center rounded-md p-2 text-gray-400 hover:bg-gray-700 hover:text-white focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white"
            aria-controls="mobile-menu" aria-expanded="false">
            <span class="sr-only">Open main menu</span>
            <!--
              Icon when menu is closed.

              Menu open: "hidden", Menu closed: "block"
            -->
            <svg class="block h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
              aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
            </svg>
            <!--
              Icon when menu is open.

              Menu open: "block", Menu closed: "hidden"
            -->
            <svg class="hidden h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
              aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
        <div class="flex flex-1 items-center justify-center sm:items-stretch sm:justify-start">
          <div class="flex flex-shrink-0 items-center">
            <img class="block h-8 w-auto lg:hidden"
              src="https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=500" alt="Your Company">
            <img class="hidden h-8 w-auto lg:block"
              src="https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=500" alt="Your Company">
          </div>
          <div class="hidden sm:ml-6 sm:block">

            <div class="flex space-x-4">
              <!-- Current: "bg-gray-900 text-white", Default: "text-gray-300 hover:bg-gray-700 hover:text-white" -->
              <% if (!user) { %>
              <a href="/login" class="focus:bg-gray-900 text-white rounded-md px-3 py-2 text-sm font-medium"
                aria-current="page">Login</a>
              <a href="/signup"
                class="text-gray-300 hover:bg-gray-700 hover:text-white focus:bg-gray-900 rounded-md px-3 py-2 text-sm font-medium">Signup</a>
              <% } else {%>
                <a href="/questions" class="focus:bg-gray-900 text-white rounded-md px-3 py-2 text-sm font-medium"
                aria-current="page">Questions</a>
                <a href="#"
                class="text-gray-300 hover:bg-gray-700 hover:text-white focus:bg-gray-900 rounded-md px-3 py-2 text-sm font-medium">Logout</a>
              <% } %>  
            </div>
          </div>
        </div>

      </div>
    </div>
    </div>

    <!-- Mobile menu, show/hide based on menu state. -->
    <div class="sm:hidden" id="mobile-menu">
      <div class="space-y-1 px-2 pb-3 pt-2">
        <!-- Current: "bg-gray-900 text-white", Default: "text-gray-300 hover:bg-gray-700 hover:text-white" -->
        <a href="#" class="bg-gray-900 text-white block rounded-md px-3 py-2 text-base font-medium"
          aria-current="page">Dashboard</a>
        <a href="#"
          class="text-gray-300 hover:bg-gray-700 hover:text-white block rounded-md px-3 py-2 text-base font-medium">Team</a>
        <a href="#"
          class="text-gray-300 hover:bg-gray-700 hover:text-white block rounded-md px-3 py-2 text-base font-medium">Projects</a>
        <a href="#"
          class="text-gray-300 hover:bg-gray-700 hover:text-white block rounded-md px-3 py-2 text-base font-medium">Calendar</a>
      </div>
    </div>
  </nav>
  <!-- nav bar above for later ^^^ -->
  <div class="content">
    <main name="div-wrap" class="h-5/6 w-7/8 container mx-auto px-4 py-8 md:w-4/6 md:h-4/6 l:h-3/6 l:w-5/6">
      <section name="MAIN INSIDE DIV"
        class=" flex flex-col h-full bg-white shadow-md rounded-3xl p-8 md:h-4/6 md:flex-col md:h-full">
        <div name="Question/vote percentage container h-3/4"
          class="flex flex-col h-1/2 justify-center items-center mb-8 text-center">
          <span class="text-gray-600" id="total-votes" style="display: none;">Total votes: 250</span>
          <h2 class="text-2xl font-semibold text-center text-black"><%=question.text%></h2>
        </div>
        <div class="relative flex flex-col w-full h-1/2 md:flex-row justify-between h-full md:flex-row">
          <button id="optionA"
            class="flex flex-col justify-center items-center w-full h-1/2 bg-blue-500 text-white text-center rounded-t-xl shadow-xl drop-shadow-lg hover:bg-blue-600 active:bg-blue-700 md:w-1/2 h-full md:rounded-tl-xl md:rounded-tr-none md:rounded-br-none md:rounded-bl-xl text-base md:text-xl"
            onClick="vote('A')">
            <p><%= question.optionA %></p>
            <div class="flex justify-center w-full">
              <span class="fa-regular fa-thumbs-up"></span>
            </div>
            <p id="percentageA" style="display: none;">40.00%</p>
          </button>
          <button id="optionB"
            class="flex flex-col justify-center items-center w-full h-1/2 bg-red-500 text-white text-center rounded-b-xl shadow-xl drop-shadow-lg hover:bg-red-600 active:bg-red-700 md:w-1/2 h-full md:rounded-tl-none md:rounded-bl-none md:rounded-tr-xl md:rounded-br-xl text-base md:text-xl"
            onClick="vote('B')">
            <p><%= question.optionB %></p>
            <div class="flex justify-center w-full">
              <span class="fa-regular fa-thumbs-up"></span>
            </div>
            <p id="percentageB" style="display: none;">60.00%</p>
          </button>
          <div class="absolute inset-0 flex justify-center items-center">
            <div
              class="flex flex-col justify-center items-center gap-y-2 my-4 bg-black text-white rounded-full p-2 h-12 w-12 md:h-24 md:w-24">
              <h1 class="">
                OR
              </h1>
            </div>
          </div>
        </div>
    </main>
    <div class="flex flex-col justify-center items-center gap-y-2 my-4">
      <button
        class="bg-green-500 rounded-3xl py-4 w-1/2 text-xs shadow-xl  hover:bg-green-600 active:bg-green-700 md:py-1.5">
        Next Question
      </button>
      <button name="comment-btn"
        class="bg-orange-500 rounded-3xl py-3 w-3/4 text-xs shadow-xl hover:bg-orange-600 active:bg-orange-700 md:py-0">
        <span class="fa-regular fa-comment"></span>
        <p>Comment</p>
      </button>
    </div>
    </section>
  </div>

  <div id="comment-modal" class="hidden fixed top-0 left-0 w-full h-full flex items-center justify-center z-1000">
    <div class="bg-white rounded-lg p-8 max-w-md w-full">
      <h2 class="text-2xl font-semibold mb-4">Comments</h2>
      <ul>
        <% comments.forEach(comment => { %>
        <li class="border-b border-gray-200 py-2"><%= comment %></li>
        <% }) %>
      </ul>
      <form action="submit">
        <label for="comment">Add a comment</label>
        <textarea id="comment" class="border border-gray-200 rounded-lg p-2 w-full mt-4"
          placeholder="Add a comment"></textarea>
        <button id="add-comment"
          class="bg-green-500 text-white rounded px-4 py-2 mt-4 hover:bg-green-600 active:bg-green-700">Add
          Comment</button>
      </form>
      <button id="close-modal"
        class="bg-red-500 text-white rounded px-4 py-2 mt-4 hover:bg-red-600 active:bg-red-700">Close</button>
    </div>
  </div>


  <style>
    .content {
      height: calc(100vh - 4rem)
    }

    #comment-modal {
      background-color: rgba(0, 0, 0, 0.5);
    }

    #comment-modal.show {
      animation: fadeIn 0.3s;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
      }

      to {
        opacity: 1;
      }
    }
  </style>
</body>

</html>
