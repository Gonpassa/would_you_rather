<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://kit.fontawesome.com/8dcd3a832c.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="/css/wyr-single.css">
  <script src="/js/wyr-single.js" defer></script>
  <script src="/js/navbar.js"defer></script>
<script defer>
  const questionData = <%- JSON.stringify(question) %>;
  const commentData = <%- JSON.stringify(commentsForQuestion) %>;

  function handleVote(option) {
    vote(option, questionData);
  }

</script>

</head>

<body class="h-auto w-screen flex flex-col bg-slate-600 border-white">
  <%- include('../testPartials/testNavbar'); %>
  <div class="content">
    <main name="div-wrap" class="h-5/6 w-7/8 container mx-auto px-4 py-8 md:w-4/6 md:h-4/6 l:h-3/6 l:w-5/6">
      <p id="voteCount1" data-vote-count="<%= question.voteCount1 %>" style="display: none;" class="text-white text-center"><%= question.voteCount1 %></p>
      <p id="voteCount2" data-vote-count="<%= question.voteCount2 %>" style="display: none;" class="text-white text-center"><%= question.voteCount2 %></p>
      <p id="totalVotes" data-vote-count="<%=question.voteCount1 + question.voteCount2%>" style="display: none;"
        class="text-white text-center">Total votes: <%= question.voteCount1 + question.voteCount2 %></p>
      <section name="MAIN INSIDE DIV" id="main-div"
        class=" flex flex-col h-full bg-white shadow-md rounded-3xl p-8 md:h-4/6 md:flex-col md:h-full">
        <div name="Question/vote percentage container h-3/4"
          class="flex flex-col h-1/2 justify-center items-center mb-8 text-center">
          <h2 class="text-2xl font-semibold text-center text-black">Would You Rather</h2>
        </div>
        <div class="relative flex flex-col w-full h-1/2 md:flex-row justify-between h-full md:flex-row">
          <button id="option1"
            class="flex flex-col justify-center items-center w-full h-1/2 bg-blue-500 text-white text-center
            rounded-t-xl shadow-xl drop-shadow-lg hover:bg-blue-600 active:bg-blue-700 md:w-1/2 h-full md:rounded-tl-xl
            md:rounded-tr-none md:rounded-br-none md:rounded-bl-xl text-base md:text-xl
            background-color: #f8f9fa;"
            onClick="handleVote('option1')">

            <p><%= question.option1 %></p>
            <div class="flex justify-center w-full">
              <span class="fa-regular fa-thumbs-up"></span>
            </div>
          </button>
          <button id="option2"
            class="flex flex-col justify-center items-center w-full h-1/2 bg-red-500 text-white text-center rounded-b-xl shadow-xl drop-shadow-lg hover:bg-red-600 active:bg-red-700 md:w-1/2 h-full md:rounded-tl-none md:rounded-bl-none md:rounded-tr-xl md:rounded-br-xl text-base md:text-xl"
            onClick="handleVote('option2')">
              <p><%= question.option2 %></p>
              <div class="flex justify-center w-full">
                <span class="fa-regular fa-thumbs-up"></span>
              </div>
          </button>
          <!-- <div class="absolute inset-0 flex justify-center items-center">
            <div
              class="flex flex-col justify-center items-center gap-y-2 my-4 bg-black text-white rounded-full p-2 h-12 w-12 md:h-24 md:w-24">
              <h1 class="">
                OR
              </h1>
            </div>
          </div> -->
        </div>
    </main>
    <div class="flex flex-col justify-center items-center gap-y-2 my-4">
      <button
        class="bg-green-500 rounded-3xl py-2 w-1/2 text-xs shadow-xl  hover:bg-green-600 active:bg-green-700 md:py-1.5"
        onClick="window.location.href='/questions'">
        Next Question
      </button>
      <button name="comment-btn"
        class="bg-orange-500 rounded-3xl py-2 w-3/4 text-xs shadow-xl py-0 px-0 hover:bg-orange-600 active:bg-orange-700 md:py-0">
        <span class="fa-regular fa-comment"></span>
        <p>Comment?</p>
      </button>
    </div>
    </section>
  </div>

  <div id="comment-modal" class="hidden fixed top-0 left-0 w-full h-full flex items-center justify-center z-1000">
    <div class="bg-white rounded-lg p-8 max-w-md w-full">
      <h2 class="text-2xl font-semibold mb-4">Comments</h2>
      <ul>
        <% commentsForQuestion.forEach(comment => { %>
          <div class="flex flex-row justify-between">
            <p class="text-gray-600"><%= comment.madeBy %></p>
            <p class="text-gray-600"><%= comment.comment %></p>
          </div>
        <% }) %>
      </ul>
      <form action="submit">
        <textarea id="comment" class="border border-gray-200 rounded-lg p-2 w-full mt-4"
          placeholder="Add a comment"></textarea>
        <button id="add-comment"
          class="bg-green-500 text-white rounded px-4 py-2 mt-4 hover:bg-green-600 active:bg-green-700">Add
          Comment</button>
      </form>
      <button id="close-modal"
        class="bg-red-500 text-white rounded px-4 py-2 mt-4 hover:bg-red-600 active:bg-red-700">Close</button>
    </div>
  </div>

</body>

</html>
